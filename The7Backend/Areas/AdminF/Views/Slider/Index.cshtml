@model IEnumerable<Slider>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminF/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

 <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Slider Table</h4>
                    <a asp-area="AdminF" asp-controller="Slider" asp-action="Create" class=" btn btn-success">Create</a>
                 
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>Count</th>
                          <th>Image</th>
                          <th>Title</th>
                      
                          <th>Settings</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>

                         @foreach (var item in Model )
                                {
                                    count++;
                                    <td>@count</td>
                          <td><img src="~/assets/images/slider/@item.Image"/></td>
                          <td>@item.Title</td>
                      
                          <td>
                              <a asp-controller="Slider" asp-action="Delete" asp-route-id="@item.Id" class=" btn btn-danger">Delete</a>
                               <a  asp-controller="Slider" asp-action="Detail" asp-route-id="@item.Id"  class="btn btn-primary">Detail</a>
                                <a asp-controller="Slider" asp-action="Update" asp-route-id="@item.Id" class=" btn btn-info">Update</a>
                          </td>
                        }
                        </tr>
                     
                       
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
        
          </div>

